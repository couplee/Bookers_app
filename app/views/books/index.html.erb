<body>
    <p id="notice"><%= notice %></p>

    <h1>Books</h1>

    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
         <% @books.each do |book| %>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to "Show", book_path(book.id), class: 'show' %></td>
                <td><%= link_to "Edit", edit_book_path(book.id), class: 'edit' %></td>
                <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?", class: 'destroy' %></td>
            </tr>
          <% end %>
        </tbody>
    </table>


<h2>New book</h2>



<%=form_with model:@book, url: books_path, local:true do |f| %>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <!--<div class = "alert alert-warning">-->
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
</div>

<div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
</div>
    
    <h4><%=f.submit 'Create Book' %></h4>
<% end %>
</body>

